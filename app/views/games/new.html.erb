<h1>New Game</h1>
<%= @letters %>
<h2>What is the longest word you can find?</h2>

<form action="/score" method="post" data-turbo="false">
  <input type="text" name="word">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>

  <%# hidden input field with an authenticity_token that ensures the POST request is coming from your website and not from another %>
</form>
